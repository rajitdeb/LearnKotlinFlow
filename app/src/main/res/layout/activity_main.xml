<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".part1.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kotlin_flows"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224" />

    <Button
        android:id="@+id/part2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Part 2: Flow Builder, Cold, Cancellation"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/part3Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/part_3_terminal_map_filter_buffer_operators"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/part2Btn" />

    <Button
        android:id="@+id/part4Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/part4_btn_string"
        app:layout_constraintEnd_toEndOf="@+id/part3Btn"
        app:layout_constraintStart_toStartOf="@+id/part3Btn"
        app:layout_constraintTop_toBottomOf="@+id/part3Btn" />

    <Button
        android:id="@+id/part5Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/part5_btn_string"
        app:layout_constraintEnd_toEndOf="@+id/part4Btn"
        app:layout_constraintStart_toStartOf="@+id/part4Btn"
        app:layout_constraintTop_toBottomOf="@+id/part4Btn" />

</androidx.constraintlayout.widget.ConstraintLayout>